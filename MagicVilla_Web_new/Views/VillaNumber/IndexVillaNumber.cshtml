@model IEnumerable<MagicVilla_Web_new.Models.Dto.VillaNumberDTO>

<div class="container p-4 border shadow rounded">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-success">Magic Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-success"><i class="bi bi-shield-fill-plus"></i>Create New (Number)</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th>ID</th>
                
                <th>Name</th>
                <th>Details</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.Villa.Name</td>
                    <td>@item.Villa.Id</td>
                    <td>@item.villaNo</td>
                    <td>@item.SpecialDetailes</td>
                    
                    <td>
                        
                    </td>

                    <td>
                        <a asp-controller="Villa" asp-action="UpdateNumberVilla" asp-route-villaNo="@item.villaNo" class="btn btn-outline-success"> <i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Villa" asp-action="DeleteNumberVilla" asp-route-villaNo="@item.villaNo" class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i>Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
