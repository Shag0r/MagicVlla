<div class="row g-2 p-2 m-2 border border-0   shadow bg-light">
    @{
        int count = 0;
    }

    @foreach(var i in Model)
    {
        <div class="p-4 col-6 ">
            <div class="row border  border-1 shadow-lg rounded-1 p-2 d-flex bg-white">
                <div class="col-6">
                    <img class="rounded-2 d-block w-100" src="@i.ImageUrl" alt="Alternate Text" />
                    <a href="#" class="btn btn-success w-100 mt-2">Book</a>
                </div>
                <div class=" col-6  rounded-2 ">
                    <h2 class="text-center text-danger">Title</h2>
                    <p class="lead font-weight-light align-self-baseline">@((MarkupString)i.Description) </p>

                    <div class=" w-100 d-flex  ">

                        <div class=" text-danger fs-6 w-100 ">
                            <p><b>Max Occupancy</b> : @i.Occupancy</p>
                            <p><b>Squre ft</b>: @i.sqft</p>
                        </div>
                        <div class="d-flex w-100 justify-content-center align-self-center">
                            <p class="fs-3 text-primary ">@i.Rate.ToString("c")</p>
                        </div>

                    </div>

                </div>


            </div>

        </div>
        count++;
        if (count == 6)
        {
            break;
        }


    }

</div>