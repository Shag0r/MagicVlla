@model IEnumerable<MagicVilla_Web_new.Models.Dto.VillaDTO>

<div class="container p-4 border shadow rounded">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-success">Magic Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a  asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-success" ><i class="bi bi-shield-fill-plus"></i>Create New</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Rate</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@item.Rate</td>
                    <td>
                        <img class="rounded-1" src="@item.ImageUrl" alt="@item.Name" style="width:100px; height:100px;" /> 
                    </td>
                    
                        <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaid="@item.Id" class="btn btn-outline-success"> <i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaid="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i>Delete</a>
                        </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
